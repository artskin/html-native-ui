  border-radius:.2em;
  cursor:pointer;
  line-height: 1;
  padding:.5715em 1em;
  border:1px solid var(--gray);
  display: inline-flex;
  justify-content: center;
  align-items: center;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  &:focus-visible{
    border: none;
  }
  outline:none;
}
