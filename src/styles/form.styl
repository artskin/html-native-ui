input[type="file"]{
  --input-color:var(--gray);
  position: relative;
  overflow: auto;
  height: auto;
  margin: 0;
  &:focus,
  &:active{
    box-shadow: none;
    animation:none;
    &::-webkit-file-upload-button{
      box-shadow:0 0 0 .3em var(--primary-shadow2);
    }
  }
  &:hover{
    &::-webkit-file-upload-button{
      background: var(--primary-hover);
    }
  }
  &::-webkit-file-upload-button{
    border: none;
    border-radius:var(--radius-val);
    background: var(--primary);
    color: var(--primary-text);
    height: var(--button-height)
    margin: .3em;
    padding: 0 var(--size);
    vertical-align: middle;
  }
  &:disabled{
    opacity:.5;
    cursor:not-allowed;
  }
}
input[type="file"][role="file-input"]{
  font-size:var(--size,14px);
  padding: .3em;
  overflow:visible;
  height: var(--button-height);
  box-sizing: content-box;
  border-radius: var(--radius-val);
  &:focus-visible{
    outline-offset: -1px;
  }
  &::-webkit-file-upload-button{
    float: right;
    z-index: 1;
    position: relative;
    margin: 0;
    display: none;
  }
  &::before,&::after{
    height: var(--button-height);
    line-height: var(--button-height);
    position: absolute;
    top: 0;
    margin: .3em 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    box-sizing: border-box;
  }
  &::before{
    content:attr(placeholder);
    background: #fff;
    color: var(--input-color);
    border: 1px solid var(--gray-hover);
    border-radius: var(--radius-val);
    width: calc(100% - .6em );
    text-indent: .3em;
    z-index:1;
    pointer-events: none;
  }
  &::after{
    content:attr(data-button);
    background: var(--primary);
    right: .3em;
    padding: 0 1em;
    text-align: center;
    color:#fff;
    border-radius: 0 3px 3px 0;
    box-shadow: -5px 0px 1px -2px #fff;
    z-index:2;
    cursor: pointer;
  }

  &:hover{
    &::before{
      border-color: var(--gray);
    }
  }
  &:active,
  &:focus{
    &::before{
      border-color: var(--primary);
    }
    &::-webkit-file-upload-button{
      box-shadow: none;
    }
  }
  &:active{
    &::before{
      box-shadow:0 0 0 .3em var(--primary-shadow2);
    }
    &::after{
      padding-top: 1px;
    }
  }
  
  
  
}