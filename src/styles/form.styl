createButton('linear',--linear)
button[size="big"]{
  --size:22px
}

//checkbox
input[type="checkbox"] {
  position: relative;
  appearance: none;
  width: 1.4em;
  height: 1.4em;
  //background-color: var(--gray);
  border-radius: .2em;
  border:1px solid #ccc;
  box-sizing:border-box;
  outline:none;
  //transform:scale(1.4);
  &::before,&::after{
    content:'';
    display:block;
    width:100%;
    height:100%;
    box-sizing:border-box;
    position:absolute;
    left:0;
    top:0;
  }
  &::after{
    transition:all .2s;
    transform:scale(0) rotate(-135deg);
  }
  &:checked {
    &::after{
      width:60%;
      left:20%;
      top:-2px;
      transform:scale(.7) rotate(-140deg);
      border-left:.3em solid var(--primary);
      border-top:.3em solid var(--primary);
    }
  }
  &:disabled{
    background:var(--gray-hover);
    &:after{
      opacity:.66;
    }
  }
}

//checkbox-switch
input[type="checkbox"][role="switch"] {
  position: relative;
  width: 2.8em;
  height: 1.4em;
  background-color: var(--gray);
  border-radius: 1em;
  //transform:scale(1.4);
  border: none;
  
  -webkit-appearance: none;
  transition: all .2s ease-out;
  cursor:pointer;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  
  &::after {
    content: '';
    position: absolute;
    top: .1em;
    left: .1em;
    width: 1.2em;
    height: 1.2em;
    background-color: #fff;
    border-radius: .6em;
    transition: all .2s ease;
    transform: scale(1);
  }
  &:active{
    &::after{
      width: 1.5em;
    }
  }
  &:checked {
    background-color: var(--primary);
    &::after {
      left: 1.5em;
      border:none;
      transform:scale(1);
    }
    &:active{
      &::after{
        left: 1.2em;
      } 
    } 
  }
}

//radio
input[type="radio"] {
  appearance: none;
  cursor:pointer;
  width:1.4em;
  height:1.4em;
  border-radius:2em;
  position:relative;
  outline: none;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  &::before,&::after{
    content:'';
    display:block;
    width:100%;
    height:100%;
    box-sizing:border-box;
    border-radius:2em;
    position:absolute;
    left:0;
    top:0;
  }
  &::before{
    border:1px solid var(--primary);
    z-index:0;
  }
  &::after{
    transform:scale(.1);
    transition:all .2s;
  }
  &:disabled{
    background:var(--gray-hover);
    &::before{
      border:1px solid var(--gray-active);
    }
  }
  &:checked{
    &::after{
      transform:scale(.6);
      background:var(--primary);
    }
  }
}
input[type="radio" i]{
   margin:0 10px;
   border-radius:2em;
   overflow:hidden;
   background-color:transparent;
}
input[data-type="tick"]{
  &::after{
    width:0;
    transform:scale(0) rotate(-135deg);
    transform-origin:center center;
    border-radius:2px;
    left:20%;
    top:-2px;
  }
  &:checked{
    &::after{
      background:transparent;
      width:60%;
      transform:scale(.5) rotate(-135deg);
      border-left:.3em solid var(--primary);
      border-top:.3em solid var(--primary);
    }
  }
}
@keyframes spread{
  0%{
    box-shadow:0 0 0 0 rgba(0 0 0,0);
  }
  30%{
    box-shadow:0 0 0 0 rgba(0 0 0,0);
  }
  60%{
    box-shadow:0 0 0 .3em var(--shadow);
  }
  90%{
    box-shadow:0 0 0 .26em var(--shadow2);
  }
}

