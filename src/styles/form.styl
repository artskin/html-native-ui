

//spread
button,input{
  font-size:var(--size,14px);
  transition:all .1s;
  margin: 0 .4em;
  vertical-align: middle;
  height :2.3333em;
  box-sizing:border-box;
  &:active{
    box-shadow:0 0 0 .26em var(--primary-shadow2);
  }
  &:focus{
    animation:spread .4s ease-in-out;
  }
  // &:focus-visible{
  //   animation:spread .36s ease-in-out;
  // }
  &:disabled{
    pointer-events:none;
    cursor:not-allowed;
  }
}

//button-style
