@import 'fn'
//stylus var
primary = rgb(97, 50, 239);
warning = #faad14;
danger = #ff4d4f;
gray = #dadada;


/* css vars */
:root{
  colorGroup(--primary,primary)
  colorGroup(--warning,warning)
  colorGroup(--danger,danger)
  colorGroup(--gray,gray)
  colorGroup(--linear-primary,gray)
  --radius-val:2px;
  --shadow:var(--primary-shadow);
  --shadow2:var(--primary-shadow2);

  --linear:linear-gradient(315deg,#6772FF 0,#00F9E5 100%);
}

html{
  font-size: 14px;
  --size:14px;
}
@media screen and (max-width: 1380px) {
  html{
    font-size: 12px;
    --size:12px;
  }
}

@media screen and (min-width: 1800px) {
  html{
    font-size: 16px;
    --size:16px;
  }
}